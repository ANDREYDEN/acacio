{
  "extends": [
    "next/core-web-vitals", "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "indent": ["error", 4]
  }
}
